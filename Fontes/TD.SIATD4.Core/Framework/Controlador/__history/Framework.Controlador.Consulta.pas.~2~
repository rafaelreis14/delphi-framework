unit Framework.Controlador.Consulta;

interface

uses RGrid, Forms, Framework.Interfaces.CRUD;

type
    TControladorConsulta<T: class> = class
        class procedure ExecutaPesquisar(grid: TRGrid; CRUD: ICRUD<T>);
        class procedure ExecutarInserir(Objeto: T; form: TForm);

        class function ValidarInsercao: boolean; virtual;
        class function Inserir: boolean; virtual;
        class function ValidarAlteracao: boolean; virtual;
        class function Alterar: boolean; virtual;
        class function ValidarExclusao: boolean; virtual;
        class function Excluir: boolean; virtual;
        class function ValidarVisualizacao: boolean; Virtual;
        class function Visualizar: boolean; virtual;
        class procedure Pesquisar; virtual;

  private
    class procedure ExecutaListar(grid: TRGrid; CRUD: ICRUD<T>); static;
    end;

implementation

{ TControladorConsulta<T> }

class function TControladorConsulta<T>.Alterar: boolean;
begin

end;

