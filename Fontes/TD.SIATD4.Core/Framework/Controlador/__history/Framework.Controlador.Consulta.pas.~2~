  CRUD: ICRUD<T>);
begin

end;

class procedure TControladorConsulta<T>.ExecutaPesquisar(grid: TRGrid;
  CRUD: ICRUD<T>);
begin

end;

class procedure TControladorConsulta<T>.ExecutarInserir(Objeto: T; form: TForm);
begin

end;

class function TControladorConsulta<T>.Inserir: boolean;
begin

end;

class procedure TControladorConsulta<T>.Pesquisar;
begin

end;

class function TControladorConsulta<T>.ValidarAlteracao: boolean;
begin

end;

class function TControladorConsulta<T>.ValidarExclusao: boolean;
begin

end;

class function TControladorConsulta<T>.ValidarInsercao: boolean;
begin

end;

class function TControladorConsulta<T>.ValidarVisualizacao: boolean;
begin

end;

class function TControladorConsulta<T>.Visualizar: boolean;
begin

end;

end.
